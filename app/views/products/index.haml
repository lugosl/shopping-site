- if flash[:notice]
  .alert-success.alert= flash[:notice]

%h2 Product list

.row
- @products.each do |product|
  .col-md-4
    .panel.panel-primary
      .panel-heading
        %h3.panel-title= link_to product.name.capitalize, product
      .panel-body
        %p= "Price: #{product.price}"
        %p= "Added #{time_ago_in_words(product.created_at)} ago."

        %p= "Comments: #{product.comments.count}"
        = shopping_cart_button(product.id)
